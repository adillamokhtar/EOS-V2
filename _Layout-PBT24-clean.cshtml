<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>PBT24</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <style>
            * 
            {
                font-family:Arial;
                font-size:12px;
                padding:5px;
            }
            .menu 
            {
                -webkit-border-radius: 5px;
                -moz-border-radius: 5px;
                border-radius: 5px;
                background-color:#666666;
                color:white;
                cursor:pointer;
                text-align:center;
            }
            .inputfull 
            {
                width:100%;
            }
            .menu:hover 
            {
                background-color:#999999;
            }
            table 
            {
                width:500px;
            }
            th 
            {
                background-color:#867DC6;
                color:white;
            }
            .header
            {
                background-color:#3d3d3d;
                font-weight:bold;
                color:white;
            }
            .button 
            {
                -webkit-border-radius: 5px;
                -moz-border-radius: 5px;
                border-radius: 5px;
                background-color:#978DD6;
                color:white;
                cursor:pointer;
            }
            .button:hover
            {
                background-color:#765DB6;
            }
        </style>
    </head>
    <body>
        @RenderBody()
    </body>
</html>
